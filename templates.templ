templ ToolResultContent(content interface{}) {
    if str, ok := content.(string); ok {
        if countLines(str) <= 5 {
            <pre>{ str }</pre>
        } else {
            <details class="collapsible-result">
                <summary class="result-summary">
                    <span class="line-count">{ strconv.Itoa(countLines(str)) } lines</span>
                    <span class="preview-text">{ getFirstLines(str, 2) }...</span>
                </summary>
                <pre class="full-content">{ str }</pre>
            </details>
        }
    } else {
        <details class="collapsible-result">
            <summary class="result-summary">
                <span class="line-count">Complex Result</span>
                <span class="preview-text">Array/Object content - click to view</span>
            </summary>
            <pre class="full-content">{ formatToolUseResult(content) }</pre>
        </details>
    }
}